%html
  %head
    %title Nysports
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    / .row
    /   .large-2.columns	
    /     = render partial: 'layouts/partials/nav'
    /   .large-9.columns
